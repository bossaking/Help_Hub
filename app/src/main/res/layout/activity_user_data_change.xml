<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UserDataChange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/user_data_change_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_data_change_old_password"
            android:layout_marginHorizontal="10sp"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/user_data_change_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_data_change_new_password"
            android:layout_marginHorizontal="10sp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/user_data_change_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="@string/save_button"/>

    </LinearLayout>

</LinearLayout>