<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserDataChange">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/changed_name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:scrollbars="vertical"
            android:padding="5sp"
            android:gravity="top"
            android:inputType="text"
            android:background="@drawable/simple_borders"/>
        <EditText
            android:id="@+id/changed_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:scrollbars="vertical"
            android:padding="5sp"
            android:gravity="top"
            android:inputType="number"
            android:background="@drawable/simple_borders"/>
        <EditText
            android:id="@+id/changed_city"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:scrollbars="vertical"
            android:padding="5sp"
            android:gravity="top"
            android:inputType="text"
            android:background="@drawable/simple_borders"/>
        <EditText
            android:id="@+id/changed_portfolio_description"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_margin="5sp"
            android:scrollbars="vertical"
            android:padding="5sp"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/simple_borders"/>

        <Button
            android:id="@+id/user_data_changes_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="Apply"/>
        <Button
            android:id="@+id/user_data_change_new_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="@string/user_data_change_new_password_button"/>

    </LinearLayout>

</ScrollView>

</LinearLayout>