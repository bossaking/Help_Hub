<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/user_fragment_container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical"
             tools:context=".Fragments.UserProfileFragment">


    <ScrollView
            android:id="@+id/user_profile_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Profile_Image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/default_user_image"
                    app:civ_border_width="2sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15sp"
                        android:text="Patryk"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/user_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15sp"
                        android:text="696 969 696"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"/>

                <TextView
                        android:id="@+id/user_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15sp"
                        android:text="BiaÅ‚ystok"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10sp"
                        android:text="@string/portfolio_title"/>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        app:cardCornerRadius="2sp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/portfolio_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5sp"
                                android:textColor="@color/black"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                        android:id="@+id/first_images_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                </LinearLayout>

                <TextView
                        android:id="@+id/show_all_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="10sp"
                        android:text="@string/show_all_portfolio_photos"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent" android:layout_height="wrap_content">

                    <RatingBar
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:isIndicator="true"/>

                    <TextView
                            android:id="@+id/opinions_count_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/opinions"
                            android:textColor="@color/colorPrimaryDark"/>


                </LinearLayout>


                <TextView
                        android:id="@+id/user_logout_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20sp"
                        android:text="@string/logout_title"
                        android:textColor="@color/colorAccent"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>