<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5sp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/single_category_image_view"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/little_margin"
            android:layout_marginTop="@dimen/little_margin" />

        <TextView
            android:id="@+id/single_category_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/little_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/example_category"
            android:textStyle="bold" />

        <View
            android:id="@+id/selectedSubcategory"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>